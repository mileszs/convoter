<p id="notice"><%= notice %></p>

<%= render @conference %>

<ul class="nav nav-tabs nav-justified">
  <% @conference.slots_by_day.each_with_index do |(day, slots), index| %>
    <li class="<%= 'active' if @conference.current_day_index?(index) %>">
      <a data-toggle="tab" href="#day_<%= index %>"><%= day %></a>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <% @conference.slots_by_day.each_with_index do |(day, slots), index| %>
    <div id="day_<%= index %>" class="tab-pane fade in <%= 'active' if @conference.current_day_index?(index) %>">
      <div>
        <%= render slots %>
      </div>
    </div>
  <% end %>
</div>

<% if current_admin %>
  <p>
    <%= link_to 'Edit', edit_conference_path(@conference) %> |
    <%= link_to 'Back', conferences_path %>
  </p>
<% end %>
